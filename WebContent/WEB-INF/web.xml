<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0"> 
  <display-name>ShortUrl</display-name>
  
  <filter>
    <filter-name>staticfilter</filter-name>
    <filter-class>com.jmb.shorturl.servlets.StaticFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>staticfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>RedirectorServlet</servlet-name>
    <servlet-class>com.jmb.shorturl.servlets.RedirectorServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RedirectorServlet</servlet-name>
    <url-pattern>/redirects/*</url-pattern>
  </servlet-mapping>

</web-app>